{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": true,
    "allowJs": false,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./components/*"]
    }
  },
  "exclude": ["node_modules"]
}
